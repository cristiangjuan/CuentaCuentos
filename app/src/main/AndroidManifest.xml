<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.cuentacuentos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReadActivityAuto"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ReadActivityStandard"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".ReadActivityManual"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".LikeActivity"
            android:screenOrientation="sensorLandscape"/>
        <activity
            android:name=".InfoActivity"
            android:screenOrientation="sensorLandscape"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>
